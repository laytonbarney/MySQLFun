@{
    ViewData["Title"] = "Home Page";
}
@model List<Bowler>

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Bowlers</h1>
        </div>
        <div class="col text-right">
            <a asp-controller="Home" asp-action="Create"
               class="btn btn-primary">Add Bowler</a>
        </div>
    </div>
</div>
    

    



<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Middle Int</th>
            <th scope="col">Last Name</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Zip</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>

    @*This is the body of the table*@

    <tbody>
        @foreach (var b in Model)
         {
            <tr>
            <td>@b.BowlerFirstName</td>
            <td>@b.BowlerMiddleInit</td>
            <td>@b.BowlerLastName</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@b.BowlerID" 
                   class="btn btn-outline-primary">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@b.BowlerID" 
                   class="btn btn-outline-danger">Delete</a></td>

            </tr>
        }
    </tbody>

</table>


